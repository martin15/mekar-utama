<% content_for :javascript_includes do %>
  <%= stylesheet_link_tag "camera" %>
  <%= javascript_include_tag  "old_jquery.min", "jquery.easing.1.3",
                             "camera" %>
<% end %>

<script type="text/javascript">
  jQuery(function(){
    jQuery('#camera_wrap_1').camera({
      thumbnails: false,
      fx : 'mosaicSpiral',
      loader	: 'none',
      navigation	: false,
      height: '318px',
      pagination			: true,
      playPause: false,
      imagePath: "assets"
    });
  });
</script>

<div class="banner">
  <div class="camera_wrap camera_azure_skin" id="camera_wrap_1">
    <% @banners.each do |banner| %>
      <%= raw "<div data-src='#{banner.banner_image.url(:large)}'></div>" %>
    <% end %>-->
  </div><!-- #camera_wrap_1 -->
</div>

<div class="clear"></div>

<div class="description">
  <div class="description-box red">
    <div class="desc-title dark-red">
      Pensil Sticker
    </div>
    <div class="desc-content">
      Pensil Sticker Pensil Sticker Pensil Sticker Pensil Sticker
    </div>
  </div>
  <div class="description-box blue">
    <div class="desc-title dark-blue">
      Pensil Graphit
    </div>
    <div class="desc-content">
      Pensil Graphit Pensil Graphit Pensil Graphit Pensil Graphit
    </div>
  </div>
  <div class="description-box no-margin green">
    <div class="desc-title dark-green">
      Pensil Sablon
    </div>
    <div class="desc-content">
      Pensil Sablon Pensil Sablon Pensil Sablon Pensil Sablon
    </div>
  </div>
</div>

<div class="best-seller">
  <h4>Best Seller</h4>
    <% @best_sellers.each_with_index do |best_seller, x| %>
      <% no_m = (x+1)%3 == 0 ? 'no-margin' : '' %>
      <div class="product-box <%= no_m %>">
        <div class="product-image">
          <%#*<span class="new-label">new</span>%>
          <%#*<span class="sale-label">sale</span>%>
          <%= image_tag best_seller.product_image.url(:medium) %>
        </div>
        <div class="product-info">
          <%= best_seller.product.name %>
        </div>
      </div>
    <% end %>
</div>

<div class="our-client">
  <h4>Our Client</h4>
  <% @best_clients.each_with_index do |best_client, z| %>
    <% no_m = 'no-margin' if z == 6 %>
    <div class="logo-box <%= no_m %>">
      <%= image_tag best_client.client_image.url(:thumb) %>
    </div>
  <% end %>
  <div class="see_all_client">
    <%= link_to "See All >>", clients_path %>
  </div>
</div>





































