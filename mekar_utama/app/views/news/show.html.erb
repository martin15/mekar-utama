<div class="inner-content">
  <div class="inner-content-title">News</div>
  <div class="inner-content-info" id="content">
    <% if @news.news_image.file?  %>
      <div class="news-detail-image">
        <%= image_tag @news.news_image.url(:medium) %>
      </div>
    <% end %>
    <div class="news-detail-content">
        <div class="news-detail-title"><%= @news.title %></div>
        <div class="news-detail-date">
          <i>uploaded at : <%= @news.updated_at.strftime("%d %B %Y") %></i>
        </div>
        <div class="news-detail-full-content"><%= raw @news.content %></div>
      </div>
  </div>
</div>